<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="10dp"
        app:layout_behavior="me.pexcn.bandwagonhost.widget.FloatingActionMenuBehavior"
        app:menu_colorNormal="@color/fabMenuNormal"
        app:menu_colorPressed="@color/fabMenuPressed"
        app:menu_colorRipple="@color/fabMenuRipple"
        app:menu_icon="@drawable/ic_action_place"
        app:menu_shadowXOffset="0dp"
        app:menu_shadowYOffset="0.5dp">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_switch_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_migrate_select"
            app:fab_colorNormal="@color/fabNormal"
            app:fab_colorPressed="@color/fabPressed"
            app:fab_colorRipple="@color/fabRipple"
            app:fab_label="选择主机"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0.5dp"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_switch_data_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_migrate_switch"
            app:fab_colorNormal="@color/fabNormal"
            app:fab_colorPressed="@color/fabPressed"
            app:fab_colorRipple="@color/fabRipple"
            app:fab_label="开始切换"
            app:fab_shadowXOffset="0dp"
            app:fab_shadowYOffset="0.5dp"
            app:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

</android.support.design.widget.CoordinatorLayout>
